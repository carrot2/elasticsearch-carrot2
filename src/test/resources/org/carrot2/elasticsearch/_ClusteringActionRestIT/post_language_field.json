{
    "search_request": {
        "_source" : ["url", "title", "content", "rndlang"],
        "query" : {
            "match" : {
              "_all" : "data mining" 
            }
        },
        "size": 300
    },

    "query_hint": "data mining",
    "field_mapping": {
        "title"   : ["_source.title"],
        "content" : ["_source.content"],
        "language": ["_source.rndlang"]
    },
    "algorithm": "lingo",
    "attributes": {
        "MultilingualClustering.languageAggregationStrategy": "FLATTEN_NONE"
    }
}
